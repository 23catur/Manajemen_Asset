<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9F9EECDC"
    tools:context=".ui.download.DownloadFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_komputer"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/komputer_ex"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/btn_laptop"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:layout_marginTop="20dp"
                android:src="@drawable/laptop_ex"
                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_cctv"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/cctv_ex"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/btn_switch"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/switch_ex"
                android:layout_marginTop="35dp"


                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_wireless"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/wireless_ex"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/btn_print"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/print_ex"
                android:layout_marginTop="35dp"

                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_server"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/server_ex"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/btn_ht"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/ht_ex"
                android:layout_marginTop="35dp"

                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_rig"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/rig_ex"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/btn_jasset"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/jasset_ex"
                android:layout_marginTop="35dp"

                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_mobile"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/mobile_ex"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                tools:ignore="OnClick" />

            <ImageView
                android:id="@+id/btn_network"
                android:layout_width="188dp"
                android:layout_height="198dp"
                android:onClick="onButtonClick"
                android:src="@drawable/network_ex"
                android:layout_marginTop="35dp"

                tools:ignore="OnClick" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>