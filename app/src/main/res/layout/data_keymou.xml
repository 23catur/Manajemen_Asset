<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/btnSelesai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_rectangle"
        android:fontFamily="@font/poppins_semibold"
        android:text="SELESAI"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:backgroundTint="@drawable/selected_button1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <ScrollView
        android:layout_width="411dp"
        android:layout_height="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/HeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Maintenance Perangkat"
                android:textColor="@color/black_custom"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtParam1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/abu_abu"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:text="Cek Secara Fisik"
                android:inputType="textPersonName"
                android:textColor="@color/abu_abu"
                android:textColorHint="@color/abu_abu"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/HeaderText" />

            <EditText
                android:id="@+id/txtkondisi1"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/abu_abu"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Kondisi"
                android:inputType="text"
                android:textColor="@color/abu_abu"
                android:textColorHint="@color/abu_abu"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtParam1" />

            <EditText
                android:id="@+id/txtKet1"
                android:layout_width="348dp"
                android:layout_height="47dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/abu_abu"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Keterangan"
                android:inputType="textPersonName"
                android:textColor="@color/abu_abu"
                android:textColorHint="@color/abu_abu"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtkondisi1" />


            <EditText
                android:id="@+id/txtParam2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/abu_abu"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:text="Kondisi Keyboard dan Mouse"
                android:inputType="textPersonName"
                android:textColor="@color/abu_abu"
                android:textColorHint="@color/abu_abu"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtKet1" />

            <EditText
                android:id="@+id/txtkondisi2"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/abu_abu"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Kondisi"
                android:inputType="text"
                android:textColor="@color/abu_abu"
                android:textColorHint="@color/abu_abu"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtParam2" />

            <EditText
                android:id="@+id/txtKet2"
                android:layout_width="348dp"
                android:layout_height="47dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/abu_abu"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Keterangan"
                android:inputType="textPersonName"
                android:textColor="@color/abu_abu"
                android:textColorHint="@color/abu_abu"
                android:textCursorDrawable="@null"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtkondisi2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>